{
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "lint:fix": "eslint \"**/*.ts*\" --fix",
        "lint:check": "eslint \"**/*.ts*\"",
        "format": "prettier --write \"**/*.{ts,tsx,md,js,json}\"",
        "format:check": "prettier --check  \"**/*.{ts,tsx,md,js,json}\"",
