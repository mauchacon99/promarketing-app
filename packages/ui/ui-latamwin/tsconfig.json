{
    "extends": "tsconfig/react-library.json",
    "compilerOptions": {
        "baseUrl": "./",
        "types": ["@types/node"],
        "jsx": "react"
    },
    "rules": {
        // Note: you must disable the base rule as it can report incorrect errors
        "indent": "off",
        "@typescript-eslint/indent": "error"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.scss"],
    "exclude": ["node_modules", "dist", "src/**/*.scss"]
}
