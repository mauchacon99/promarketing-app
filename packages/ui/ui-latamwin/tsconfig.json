{
    "extends": "tsconfig/react-library.json",
    "compilerOptions": {
        "paths": {
            "@cva/*": [
                "cva/*"
            ],
            "@components/*": [
                "components/*"
            ]
        },
        "baseUrl": "src",
        "jsx": "react"
    },
    "rules": {
        "indent": "off",
        "@typescript-eslint/indent": "error"
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.scss"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}